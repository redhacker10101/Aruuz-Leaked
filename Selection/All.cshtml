@model IEnumerable<Aruuz.Models.PoetryClass>
@using Aruuz.Models
@{
    ViewBag.Title = "مشہور شاعروں کے کلام سے انتخاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section meta{
    <meta name="description" content="اردو شعرا کا کلام">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:app_id" content="202167263310439" />
    <meta property="og:type" content="aruuztaqti:poetry" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="/images/logo4.png" />
}
<div class="container mr-auto">
    <div class="main main-raised2 col-md-8 col-12 px-0 justify-content-center mx-auto">
        @foreach (var m in Model)
        {
            await Html.RenderPartialAsync("_PartialSelection", m);
            <div class="pt-lg-2 pd-md-2 pt-sm-2 pt-2">
            </div>
        }
    </div>
    <div class="row">
        <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" dir="rtl">
                @if (Model.Count() > 0)
                {
                    Pagination pg = new Pagination();
                    pg.currentPage = Model.First().currentPage;
                    pg.maxPages = Model.First().maxpages;
                    pg.baseUrl = "/selection/all?";
                    pg.subUrl = "selection";
                    await Html.RenderPartialAsync("_Pagination", pg);
                }
            </nav>
        </div>
    </div>
</div>

