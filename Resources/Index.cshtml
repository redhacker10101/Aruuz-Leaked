@model IEnumerable<Aruuz.Models.Resources>
@using System.Globalization
@{

    ViewBag.Title = "عروض، شاعری اور ویب سائٹ کے استعمال پر مضامین";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section meta{
    <meta name="description" content="اردو شاعری اور علم عروض پر مضامین">
    <meta name="description" content="Free Articles on Urdu Poetry">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
}


<div id="metersDiv"></div>

<div class="urdu">
    <div class="container" dir="rtl">
        <div class="row justify-content-center">
            <div class="col col-md-8 col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb urdu-small hidden-xs">
                        <li class="breadcrumb-item"><a href="/home">عروض</a></li>
                        <li class="breadcrumb-item active" aria-current="page">مضامین</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col col-md-8 col-12">
                <div class="card  ">
                    <div class="card-header">
                        <div class="row">
                            <div class="urdu col col-10 float-right">
                                <p class="urdu text-right text-info">مضامین</p>
                                <p class="urdu-medium text-right text-secondary">ویب سائٹ کے استعمال، عروض اور شاعری سے متعلق مضامین</p>
                            </div>
                            <div class="urdu col col-2 float-left">
                                <img src="~/icons/articles.png" width="40" height="40" class="pull-left">
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table urdu-medium table-striped table-light table-bordered mx-0 my-0">
                                <thead >
                                    <tr class="text-right">
                                        <th colspan="3">عنوان</th>
                                        <th>مصنف</th>
                                        <th>زمرہ</th>
                                        <th class="d-none d-md-block"> مناظر</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-right">
                                            @if (item.id.Equals("8GjDeOfQst2BBz6ZHPTD"))
                                            {
                                                <td colspan="3">
                                                    @Html.ActionLink(item.title, "MetersList", "Resources")
                                                </td>
                                                <td>
                                                    <p>@Html.DisplayFor(modelItem => item.author)</p>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.category)
                                                </td>

                                                <td class="d-none d-md-block">
                                                    @Html.DisplayFor(modelItem => item.views)
                                                </td>
                                            }
                                            else
                                            {
                                                <td colspan="3">
                                                    @Html.ActionLink(item.title, "Article", "Resources", new { id = item.id }, null)
                                                </td>
                                                <td>
                                                    <p>@Html.DisplayFor(modelItem => item.author)</p>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.category)
                                                </td>
                                                <td class="d-none d-md-block">
                                                    @Html.DisplayFor(modelItem => item.views)
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="card-footer">


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
