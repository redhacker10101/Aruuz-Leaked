@model Aruuz.Models.Info

<div class="modal-content text-right" dir="rtl">
    <div class="modal-header">
        <h4 class="modal-title urdu-large text-info" id="myModalLabel">@Model.title</h4>
    </div>
    <div class="modal-body">
        @Html.Raw(Model.body)
    </div>
    <div class="modal-footer ml-auto" dir="rtl">
        <button type="button" class="btn btn-outline-primary btn-sm urdu" data-dismiss="modal">بند کریں</button>
    </div>
</div><!-- /.modal-content -->