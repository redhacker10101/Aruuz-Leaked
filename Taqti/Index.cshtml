@model Aruuz.Models.Input

@{
    ViewBag.Title = "اردو اشعار کی تقطیع کریں";
    Layout = "~/Views/Shared/_Layout.cshtml";

}




@section meta{
    <meta name="description" content="Scansion of Urdu Poetry into meters and feet">
    <meta name="description" content="اردو شاعری کی تقطیع اور بحر اور وزن کی معلومات">
    <meta name="keywords" content="عروض، اردو شاعری، شاعری، بحور، بحور فہرست، بحر ہزج، بحر رمل، بحر متقارب، میر ہندی بحر، بحر ہندی، بحر رمزمہ، متدارک بحر">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:app_id" content="202167263310439" />
    <meta property="fb:profile_id" content="sayedzeeshan.asghar" />
    <meta property="og:type" content="aruuztaqti:poetry" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="/images/aruuz3.jpg" />
}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col col-md-8  col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb urdu-small hidden-xs">
                            <li class="breadcrumb-item"><a href="/home">عروض</a></li>
                            <li class="breadcrumb-item active" aria-current="page">تقطیع</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="main main-raised2 col-md-8 col-12 px-0 justify-content-center mx-auto">

                <div class="row justify-content-center">
                    <div class="col col-md-12 col-12">
                        <div class="card  ">

                            <div class="card-header urdu mb-0 py-1">
                                <div class="row">
                                    <div class="urdu col col-lg-6 col-md-6 col-sm-6 col-xs-6 float-right my-2">
                                        <p class="urdu text-right text-info my-1">اشعار کی تقطیع</p>
                                    </div>
                                    <div class="urdu col col-lg-6 col-md-6 col-sm-6 col-xs-6 float-left py-2">
                                        <img src="~/icons/taqti.png" width="35" height="35" class="float-left my-1">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body urdu-medium">
                                <p class="urdu-small text-right">
                                    <a href="/resources/article?id=gSh76id7O6U004sJYHhM">
                                        <i class="fa fa-info"></i>
                                        تقطیع سیکشن کا استعمال کیسے کریں؟
                                    </a>
                                </p>
                                <p class="urdu-small text-right">
                                    <a href="#" onclick="infoClicked(1)">
                                        <i class="fa fa-info"></i>
                                        تقطیع بٹن دبانے سے پہلے ان ہدایات کا مطالعہ ضرور کریں
                                    </a>
                                </p>
                                @Html.HiddenFor(Model => Model.rand)
                                @Html.TextAreaFor(Model => Model.text, 8, 8, new { @class = "form-control input-block-level urdu-medium yauk", @placeholder = " بحر اور تقطیع دیکھنے کے لئے اشعار یہاں داخل کریں", @tabindex = "1" })
                            </div>
                            <div class="card-footer" dir="rtl">
                                <div class="row">
                                    <div class="urdu-medium col col-4 float-right">
                                        <input type="submit" class="btn btn-outline-primary float-right" value="تقطیع دکھائیں" tabindex="1" />
                                    </div>

                                    <div class="col col-6">
                                        <div class="btn-group-toggle float-left" data-toggle="buttons" onchange="validate()">
                                            <label class="btn btn-outline-secondary btn-sm urdu-medium" data-toggle="popover" data-container="body" data-content="ایسے اشعار جن میں بحر کے ارکان کی تعداد مقرر نہ ہو (آزاد نظموں کے لئے یہ آپشن رکھیں)" title="ہدایات">
                                                آزاد
                                                @Html.RadioButtonFor(model => Model.isChecked, true, new { @type = "radio", @name = "options", @id = "option1", @class = "urdu-medium" })
                                            </label>
                                            <label class="btn btn-outline-secondary btn-sm active urdu-medium" data-toggle="popover" data-content="ایسے اشعار جن میں بحر کے ارکان کی تعداد متعین ہو(غزل اور پابند نظم کے لئے یہ آپشن رکھیں) " title="ہدایات">
                                                پابند
                                                @Html.RadioButtonFor(model => Model.isChecked, false, new { @type = "radio", @name = "options", @id = "option2", @class = "active urdu-medium" })
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col col-2 float-left">
                                        <div class="btn btn-outline-secondary btn-sm float-left" onclick="infoClicked(6)" data-toggle="popover" data-content="اردو کی-بورڈ کے بغیر اس سائٹ میں انپٹ دینے کے لئے اس کی-بورڈ لے-آوٹ کا ستعمال کریں" data-title="ہدایات">
                                            <img src="~/icons/keyboard.png" alt="کی-بورڈ کا لے-آوٹ" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            </div>
</fieldset>
}


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">معلومات</h5>

            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" id="modal-button" onclick="modalButtonClicked()">
                    <p id="button-label">
                        بند کریں
                    </p>
                </button>
            </div>
        </div>
    </div>
</div>

