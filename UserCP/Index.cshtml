@model Aruuz.Models.UserCPList
@using Aruuz.Models
@using System.Globalization

@{
    ViewBag.Title = "کنٹرول پینل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col col-md-12  col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb urdu-small hidden-xs">
                <li class="breadcrumb-item"><a href="/home">عروض</a></li>
                <li class="breadcrumb-item active" aria-current="page">اشاعت</li>
            </ol>
        </nav>
    </div>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist" dir="rtl">
            @if (Model.active == 0)
            {
            <a class="nav-item nav-link active urdu-large" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">میری بیاض</a>
            <a class="nav-item nav-link urdu-large" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">میری گفتگو</a>
            }
            else
            {
            <a class="nav-item nav-link urdu-large" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="false">میری بیاض</a>
            <a class="nav-item nav-link active urdu-large" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="true">میری گفتگو</a>
            }

        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        @if (Model.active == 0)
        {
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">@{await Html.RenderPartialAsync("_PartialPoetryList", Model.userPoetryLst);}</div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">@{await Html.RenderPartialAsync("_PartialDiscussionList", Model.userDiscLst);}</div>
        }
        else
        {
        <div class="tab-pane fade " id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">@{await Html.RenderPartialAsync("_PartialPoetryList", Model.userPoetryLst);}</div>
        <div class="tab-pane fade active show" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">@{await Html.RenderPartialAsync("_PartialDiscussionList", Model.userDiscLst);}</div>
        }
    </div>
</div>

