@model Aruuz.Models.Input
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "اصلاح کا نتیجہ";
}

<script type="text/javascript">
    $(document).ready(function () {
        var myVar = setInterval(myTimer, 500);
        var myVar2 = setInterval(myTimer2, 5000);

        function myTimer() {
            populateProgress2();
        }

        function myTimer2() {
            var pdata = $('#pbar4').val();
            if (pdata == 100) {
                clearInterval(myVar);
            }
        }
    });
</script>

