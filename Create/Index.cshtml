@model Aruuz.Models.Input

@{
    ViewBag.Title = "اردو اشعار کی اصلاح کریں";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section meta{
    <meta name="description" content="Scansion of Urdu Poetry into meters and feet">
    <meta name="description" content="اردو شاعری کی تقطیع اور بحر اور وزن کی معلومات">
    <meta name="keywords" content="عروض، اردو شاعری، شاعری، بحور، بحور فہرست، بحر ہزج، بحر رمل، بحر متقارب، میر ہندی بحر، بحر ہندی، بحر رمزمہ، متدارک بحر، اشعار کی اصلاح، خود کار سافٹ ویئر، مشینی استاد">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:app_id" content="202167263310439" />
    <meta property="fb:profile_id" content="sayedzeeshan.asghar" />
    <meta property="og:type" content="aruuztaqti:poetry" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="/images/aruuz3.jpg" />
}

@using (Html.BeginForm())
{
@Html.ValidationSummary(true)
@Html.AntiForgeryToken()

<fieldset>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-md-8 col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb urdu-small hidden-xs">
                        <li class="breadcrumb-item"><a href="/home">عروض</a></li>
                        <li class="breadcrumb-item active" aria-current="page">اصلاح</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="main main-raised2 col-md-8 col-12 px-0 justify-content-center mx-auto">

            <div class="row justify-content-center">
                <div class="col col-md-12 col-12">
                    <div class="card">
                        <div class="card-header urdu mb-0 py-1">
                            <div class="row">
                                <div class="urdu col col-lg-6 col-md-6 col-sm-6 col-xs-6 float-right my-2">
                                    <p class="urdu text-right text-info my-1">اشعار کی اصلاح</p>
                                </div>
                                <div class="urdu col col-lg-6 col-md-6 col-sm-6 col-xs-6 float-left py-2">
                                    <img src="~/icons/create.png" width="35" height="35" class="float-left my-1">
                                </div>
                            </div>
                        </div>
                        <div class="card-body urdu">
                            <p class="urdu-small text-right">
                                <a href="/resources/article?id=kiBHVkKhJTZCLEFYyBny">
                                    <i class="fa fa-info"></i>
                                    اصلاح سیکشن کا استعمال کیسے کریں؟ (تصویری وضاحت)
                                </a>
                            </p>
                            <p class="urdu-small text-right">
                                <a href="https://youtu.be/rQqkLEkGUfg">
                                    <i class="fa fa-info"></i>
                                    اصلاح سیکشن کا استعمال کیسے کریں؟ (ویڈیو)
                                </a>
                            </p>
                            <p class="urdu-small text-right">
                                <a href="#" onclick="infoClicked(2)">
                                    <i class="fa fa-info"></i>
                                    اصلاح بٹن دبانے سے پہلے ان ہدایات کا مطالعہ ضرور کریں
                                </a>
                            </p>
                            @Html.HiddenFor(Model => Model.rand)

                            @Html.TextAreaFor(Model => Model.text, 8, 8, new { @class = "form-control input-block-level urdu-medium yauk", @placeholder = "قریب ترین بحر معلوم کرنے اور اصلاح کی معلومات حاصل کرنے کے لئے اشعار یہاں داخل کریں", @tabindex = "1" })


                        </div>
                        <div class="card-footer urdu">
                            <div class="row">
                                <div class="urdu-medium col col-lg-6 col-md-6 col-sm-6 col-md-push-0 col-sm-push-0 col-lg-push-0 col-xs-6 float-right">
                                    <input type="submit" class="btn btn-outline-primary float-right" value="اصلاح دکھائیں" tabindex="1" />
                                </div>

                                <div class="urdu-medium col col-lg-6 col-md-6 col-sm-6 col-xs-6 float-left">
                                    <div class="btn btn-outline-secondary btn-sm float-left" onclick="infoClicked(6)" data-toggle="popover" data-content="اردو کی-بورڈ کے بغیر اس سایٹ میں انپٹ دینے کے لیے اس کی-بورڈ لے-آوٹ کا استعمال کریں" data-title="ہدایات">
                                        <img src="~/icons/keyboard.png" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
</fieldset>
}



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">معلومات</h5>

            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" id="modal-button" onclick="modalButtonClicked()">
                    <p id="button-label">
                        بند کریں
                    </p>
                </button>
            </div>
        </div>
    </div>
</div>
