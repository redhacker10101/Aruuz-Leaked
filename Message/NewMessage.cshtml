@model Aruuz.Models.Messages
@using Aruuz.Models;
@{
    ViewBag.Title = "پیغام داخلہ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="container urdu-medium">
            <div class="row justify-content-center">
                <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb urdu-small hidden-xs">
                            <li class="breadcrumb-item"><a href="/home">عروض</a></li>
                            <li class="breadcrumb-item"><a href="/usercp">اشاعت</a></li>
                            <li class="breadcrumb-item active" aria-current="page">شاعری</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger english-font-normal"></div>


            <div class="row bg-light text-dark">
                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 float-right text-right urdu-naskh-small">
                    <a class="text-right urdu-naskh-medium">ممبر کا یوزر نیم</a>
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 float-right text-right english-font-normal">
                    @Html.TextBoxFor(Model => Model.IdToUser, new { @class = "form-control input-lg english-font-medium text-left" })
                </div>
            </div>
            <div class="row bg-light text-dark">
                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 float-right text-right urdu-naskh-small">
                    <a class="text-right urdu-naskh-medium">عنوان</a>
                </div>
            </div>
            <div class="row">
                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 float-right text-right">
                    @Html.TextBoxFor(Model => Model.Title, new { @class = "form-control input-lg urdu-small text-right" })
                </div>
            </div>
            <div class="row bg-light text-dark">
                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12 float-right text-right urdu-naskh-small">
                    <a class="text-right urdu-naskh-medium">پیغام</a>
                </div>
            </div>
            <div class="row">
                <div class="col col-12 float-right text-right">
                    @Html.TextAreaFor(Model => Model.Text, 8, 8, new { @class = "form-control input-block-level urdu-small", @placeholder = " اپنا پیغام یہاں داخل کریں", @tabindex = "1" })
                    <input type="submit" class="btn btn-primary btn-lg" value="داخل کریں" />
                </div>
            </div>
        </div>
    </fieldset>
}


